<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        app:cardCornerRadius="10dp"
        android:id="@+id/title_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:padding="16dp">

            <RelativeLayout
                android:id="@+id/group_container_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/group_icon_container"
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/rounded">

                    <TextView
                        android:id="@+id/abbr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="CS 201"
                        android:textColor="@color/white" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/group_icon_container"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/group_icon_container"
                    android:text="CompSci 201 2016 fall"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <TextView
                android:id="@+id/members_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/group_container_1"
                android:layout_marginTop="10dp"
                android:text="121 members Â· 4 friends in the group"
                android:textSize="15sp" />

            <Button
                android:id="@+id/join_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/members_info"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded"
                android:text="Join!"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        app:cardCornerRadius="10dp"
        android:id="@+id/details_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_card"
        android:layout_marginTop="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:padding="16dp">


            <TextView
                android:textSize="17sp"
                android:id="@+id/details_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Details" />

            <TextView
                android:id="@+id/details_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/details_label"
                android:layout_marginTop="8dp"
                android:text="Lorem ipsum dolor sit amet, ne pri singulis sensibus, ea mea porro tritani minimum, nostrud epicurei at mei. Errem referrentur ius no, scaevola postulant qualisque usu id. Facilisis sadipscing vis ad, at legere nominavi his. Altera commodo partiendo eu vel, lorem etiam vel id. "
                android:textSize="17sp"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>