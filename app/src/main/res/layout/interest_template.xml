<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/interest_width"
    android:layout_height="@dimen/filters_height"
    android:background="@color/LightGrey">
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        
        <ImageView
            android:id="@+id/filter_img"
            android:src="@mipmap/ic_logo"
            android:layout_width="@dimen/interest_img_size"
            android:layout_height="@dimen/interest_img_size" />

        <TextView
            android:layout_below="@id/filter_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sample"/>
        
    </RelativeLayout>


</RelativeLayout>