<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="genieus.com.walla.v2.Create"
    tools:showIn="@layout/activity_create2">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <android.support.v7.widget.CardView
                android:id="@+id/cv_container1"
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/visibility_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="16dp"
                            android:paddingTop="4dp"
                            android:text="Visibility" />

                        <TextView
                            android:id="@+id/visibility_in"
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:layout_below="@+id/visibility_label"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="4dp"
                            android:background="@drawable/rounded_corners" />

                    </RelativeLayout>

                </RelativeLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cv_container1"
                android:layout_marginTop="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <RelativeLayout
                        android:id="@+id/title_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/title_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="16dp"
                            android:paddingTop="4dp"
                            android:text="Title" />

                        <EditText
                            android:id="@+id/title_in"
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:layout_below="@+id/title_label"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="4dp"
                            android:background="@drawable/rounded_corners"
                            android:hint="Let's play basketball!"
                            android:paddingLeft="8dp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/start_time_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/title_container"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:id="@+id/start_time_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:labelFor="@id/title_in"
                            android:paddingLeft="16dp"
                            android:paddingTop="4dp"
                            android:text="Start time" />

                        <TextView
                            android:id="@+id/start_time_in"
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:layout_below="@+id/start_time_label"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="4dp"
                            android:background="@drawable/rounded_corners" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/end_time_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/start_time_container"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:id="@+id/end_time_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:labelFor="@id/title_in"
                            android:paddingLeft="16dp"
                            android:paddingTop="4dp"
                            android:text="End time" />

                        <TextView
                            android:id="@+id/end_time_in"
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:layout_below="@+id/end_time_label"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="4dp"
                            android:background="@drawable/rounded_corners" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/location_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/end_time_container"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:id="@+id/location_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:labelFor="@id/title_in"
                            android:paddingLeft="16dp"
                            android:paddingTop="4dp"
                            android:text="Location" />

                        <EditText
                            android:id="@+id/location_in"
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:layout_below="@+id/location_label"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="4dp"
                            android:background="@drawable/rounded_corners" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/location_pin_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/location_container"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:id="@+id/location_pin_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:labelFor="@id/title_in"
                            android:paddingLeft="16dp"
                            android:paddingTop="4dp"
                            android:text="Make a pin on map (optional)" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="350dp"
                            android:layout_below="@+id/location_pin_label"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="4dp"
                            android:background="@drawable/rounded_corners">

                            <include layout="@layout/activity_maps" />

                        </RelativeLayout>


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/details_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/location_pin_container"
                        android:layout_marginBottom="16dp"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:id="@+id/details_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:labelFor="@id/title_in"
                            android:paddingLeft="16dp"
                            android:paddingTop="4dp"
                            android:text="Details (optional)" />

                        <EditText
                            android:id="@+id/details_in"
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:layout_below="@+id/details_label"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="4dp"
                            android:background="@drawable/rounded_corners" />


                    </RelativeLayout>


                </RelativeLayout>


            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>


</RelativeLayout>
