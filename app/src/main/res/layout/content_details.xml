<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="genieus.com.walla.v2.activity.Details"
    tools:showIn="@layout/activity_details">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

    </FrameLayout>

    <android.support.v4.widget.NestedScrollView
        android:fillViewport="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">


        <RelativeLayout
            android:id="@+id/main_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/tabs_container"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@android:color/transparent"
                android:orientation="horizontal">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/tabs_rv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/groups_rv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />


            </LinearLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/title_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tabs_container">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_corners"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="10"
                        android:background="@color/white">

                        <ImageView
                            android:id="@+id/visibility"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:layout_margin="4dp"
                            android:src="@drawable/ic_lit_gray" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="4"
                                android:paddingLeft="16dp">


                                <TextView
                                    android:id="@+id/duration"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="8dp"
                                    android:text="6:30 PM\nto 8:30"
                                    android:textSize="17sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/duration"
                                    android:layout_marginTop="4dp"
                                    android:text="Today" />


                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="10">

                                <TextView
                                    android:id="@+id/title"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentBottom="true"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true"
                                    android:gravity="center_vertical"
                                    android:paddingBottom="24dp"
                                    android:paddingLeft="8dp"
                                    android:paddingRight="8dp"
                                    android:paddingTop="24dp"
                                    android:text="Movie Night at Bryan Center Free Popcorn and drinks"
                                    android:textSize="20sp" />


                            </RelativeLayout>

                        </LinearLayout>


                    </RelativeLayout>


                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/interactions_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title_card"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="8dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="16dp">

                            <TextView
                                android:id="@+id/invitees_in"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_below="@+id/invitees_label"
                                android:text="Shray Gupta, Alexis Angel"
                                android:textSize="16sp"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/invitees_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:text="Invited 2 friend(s)"
                                android:textSize="17sp"
                                android:visibility="gone" />

                        </RelativeLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/interactions_subcontainer1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:paddingTop="8dp">

                        <TextView
                            android:id="@+id/going_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:paddingLeft="16dp"
                            android:text="Who's going"
                            android:textSize="17sp" />


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:layout_marginTop="24dp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:orientation="horizontal"
                                    android:paddingLeft="16dp">

                                    <RelativeLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="2">

                                        <ImageView
                                            android:id="@+id/interested_icon"
                                            android:layout_width="20dp"
                                            android:layout_height="match_parent"
                                            android:src="@mipmap/star" />

                                        <TextView
                                            android:id="@+id/interested_count"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerVertical="true"
                                            android:layout_marginLeft="3dp"
                                            android:layout_toRightOf="@id/interested_icon"
                                            android:text="7"
                                            android:textSize="17sp" />

                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="9">

                                        <TextView
                                            android:id="@+id/interested_in"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentLeft="true"
                                            android:layout_alignParentStart="true"
                                            android:layout_centerVertical="true"
                                            android:text="Ben Yang, Albert Pujols and 5 others are interested"
                                            android:textSize="16sp" />

                                    </RelativeLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:orientation="horizontal"
                                    android:paddingLeft="16dp">

                                    <RelativeLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="2">

                                        <ImageView
                                            android:id="@+id/going_icon"
                                            android:layout_width="20dp"
                                            android:layout_height="match_parent"
                                            android:src="@mipmap/check" />

                                        <TextView
                                            android:id="@+id/going_count"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerVertical="true"
                                            android:layout_marginLeft="3dp"
                                            android:layout_toRightOf="@id/going_icon"
                                            android:text="5"
                                            android:textSize="17sp" />

                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="9">

                                        <TextView
                                            android:id="@+id/going_in"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentLeft="true"
                                            android:layout_alignParentStart="true"
                                            android:layout_centerVertical="true"
                                            android:text="JoJo Dechiccis, Judy Zhu and 3 others are going"
                                            android:textSize="16sp" />

                                    </RelativeLayout>

                                </LinearLayout>

                            </LinearLayout>

                        </RelativeLayout>

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/actions"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_below="@id/interactions_subcontainer1"
                        android:orientation="horizontal"
                        android:padding="0dp">

                        <ImageButton
                            android:id="@+id/interested_btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:src="@mipmap/interestedbtn" />

                        <ImageButton
                            android:id="@+id/going_btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:src="@mipmap/goingbtn" />

                        <ImageButton
                            android:id="@+id/invite_btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:src="@mipmap/invitebtn" />

                        <ImageButton
                            android:id="@+id/share_btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:src="@mipmap/sharebtn" />


                    </LinearLayout>

                </RelativeLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/location_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/interactions_details"
                android:layout_marginTop="16dp"
                android:background="@drawable/rounded"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:id="@+id/location_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp">

                    <TextView
                        android:id="@+id/show_on_map_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@id/location_label"
                        android:layout_alignParentRight="true"
                        android:paddingRight="8dp"
                        android:text="show on map"
                        android:textSize="13sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/location_in"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/location_label"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical"
                        android:paddingBottom="8dp"
                        android:text="Love Auditorium"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/location_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="16dp"
                        android:paddingTop="4dp"
                        android:text="Location"
                        android:textSize="17sp" />

                    <RelativeLayout
                        android:id="@+id/map_container"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_below="@id/location_in"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:background="@drawable/rounded"
                        android:visibility="visible">

                        <fragment
                            android:id="@+id/map"
                            class="com.google.android.gms.maps.SupportMapFragment"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/get_directions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/map_container"
                        android:drawableLeft="@drawable/ic_location"
                        android:gravity="center_vertical"
                        android:paddingLeft="16dp"
                        android:paddingTop="4dp"
                        android:text="Get directions"
                        android:textSize="16sp"
                        android:visibility="visible" />

                </RelativeLayout>


            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/host_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/location_card"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:id="@+id/host_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="8dp"
                    android:paddingLeft="16dp"
                    android:paddingTop="8dp">

                    <TextView
                        android:id="@+id/host_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Host"
                        android:textSize="17sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_below="@id/host_label">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/host_image"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerVertical="true"
                            android:src="@color/LightGrey" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="8dp"
                            android:layout_toRightOf="@id/host_image">

                            <TextView
                                android:id="@+id/host_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Joseph Dechicchis"
                                android:textSize="17sp" />

                            <TextView
                                android:id="@+id/host_info"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/host_name"
                                android:text="Freshman ·  Computer Science"
                                android:textSize="16sp" />

                        </RelativeLayout>

                    </RelativeLayout>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/details_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/host_card"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:id="@+id/details_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp">

                    <TextView
                        android:id="@+id/details_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="16dp"
                        android:paddingTop="4dp"
                        android:text="Details"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/details_in"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/details_label"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical"
                        android:paddingBottom="8dp"
                        android:text="Lorem ipsum dolor sit amet, quas sadipscing ea nam. Eos ne simul consul definiebas, te case pericula mei. Id dicat primis eum, mei adhuc diceret eligendi id. Ei eius consulatu repudiare eos, ridens dicunt ex mea."
                        android:textSize="17sp" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/discussion_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/details_card"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="8dp">

                    <TextView
                        android:id="@+id/discussion_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Discussion"
                        android:textSize="17sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/discussion_label"
                        android:layout_marginBottom="8dp">

                        <LinearLayout
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            android:orientation="vertical"
                            android:id="@+id/comment_section"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">



                        </LinearLayout>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_below="@id/comment_section"
                            android:layout_marginTop="4dp">

                            <EditText
                                android:id="@+id/comment_input"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="8dp"
                                android:layout_marginTop="8dp"
                                android:layout_weight="4"
                                android:background="#f1f1f1"
                                android:hint="Join the discussion!"
                                android:imeOptions="actionSend"
                                android:inputType="text"
                                android:paddingLeft="8dp"
                                android:paddingRight="8dp" />


                        </RelativeLayout>


                    </RelativeLayout>


                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>
